<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">タイトル</th>
      <th scope="col">内容</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each with_index(1) do |post,i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= post.title %></td>
        <td>
          <%= link_to "詳細", post %>
          <%= link_to "編集", edit_post %>
          <%= link_to "削除", post, method: :delete, data: {confirm: "削除しますか？"} %>
      </tr>
  </tbody>
</table>